            <div class="form-group">
                <label asp-for="Payment.IdRental" class="control-label"></label>
                <select asp-for="Payment.IdRental" class="form-control" asp-items="ViewBag.IdRental"></select>
                <span asp-validation-for="Payment.IdRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.IdCrediCardPayment" class="control-label"></label>
                <select asp-for="Payment.IdCrediCardPayment" class="form-control" asp-items="ViewBag.IdCrediCardPayment"></select>
                <span asp-validation-for="Payment.IdCrediCardPayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

