@page
@model Shows4all.App.Pages.Rentals.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h1>Rentals Page</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].DateRented)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].Serie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rental)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRented)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serie.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Id)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="/prices/index">Total Prices</a></p>


