@page
@model Shows4all.App.Pages.Rentals.IndexModel

@{
    ViewData["Title"] = "Rentals";
}

<h1>Rentals</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by rental:
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@ViewData["DateRentedSort"]" >
                    @Html.DisplayNameFor(model => model.Rental[0].DateRented)
                    </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@ViewData.["SerieSort"]" >
                    @Html.DisplayNameFor(model => model.Rental[0].Serie)
                </a>
</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rental)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRented)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serie.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


