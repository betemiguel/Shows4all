
@page
@model Shows4all.App.Pages.ViewSeries.IndexModelClient

@{
    ViewData["Title"] = "Index";
}

<h1> Series</h1>

<a href="/serieFilter">Search Series</a>

<div class="card-deck">
    @foreach (var serie in Model.Serie)
    {

        //var photoPath = "~/images/" + ("FIVEO.jpg");
        //var photoPath = "~/images/" + ("HOW.jpg");

        <div class="card m-3" style=" min-width: 20rem; max-width:50.5%;">
            <div class="card-header">
                <h2><b> @serie.Name </b></h2>
                <h4> @serie.Description</h4>
                <h6>Release Date: @serie.ReleaseDate</h6>
            </div>

            @*<img class="card-img-top img-thumbnail" src="@photoPath"
                asp-append-version="true" />*@

            <div class="card-footer text-center">
                <p><a href="/comments/index">Comments</a></p>
                @*<a href="#" class="btn btn-primary m-1">View</a>*@
            </div>
        </div>



    }
</div>




